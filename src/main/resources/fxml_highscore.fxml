<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<Pane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.HighscoreController">
   <children>
      <BorderPane minHeight="720.0" minWidth="1080.0">
         <center>
            <VBox alignment="CENTER" spacing="2.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <ListView fx:id="winnerListView" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refreshWinners" text="refresh" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </center>
         <bottom>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <items>
                  <Button mnemonicParsing="false" onAction="#switchToMenu" text="Go To Menu" />
                  <Button mnemonicParsing="false" onAction="#switchToGame" text="Go To Game" />
              </items>
            </ToolBar>
         </bottom>
         <top>
            <Label text="HIGHSCORES" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold Italic" size="30.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </top>
      </BorderPane>
   </children>
</Pane>
