<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.HighscoreController">
   <children>
      <ImageView fitHeight="720.0" fitWidth="1080.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Holztisch1.png" />
         </image>
      </ImageView>
      <BorderPane minHeight="720.0" minWidth="1080.0">
         <center>
            <VBox alignment="CENTER" spacing="2.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="79.0" fitWidth="489.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@highscoreText_definitiv.png" />
                     </image>
                  </ImageView>
                  <HBox alignment="CENTER" spacing="5.0">
                     <children>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                           <children>
                              <ImageView fitHeight="453.0" fitWidth="461.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@panel_definitiv.png" />
                                 </image>
                              </ImageView>
                              <ListView fx:id="winnerListView" layoutX="97.0" layoutY="52.0" prefHeight="311.0" prefWidth="247.0" />
                           </children>
                        </AnchorPane>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <ImageView fitHeight="62.0" fitWidth="99.0" onMouseClicked="#refreshWinners" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@refreshButton_defintiv.png" />
                     </image>
                  </ImageView>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </center>
         <bottom>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" onMouseClicked="#switchToGame" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@gameButton_definitiv.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="150.0" fitWidth="200.0" onMouseClicked="#switchToMenu" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@menuButton_definitiv.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</Pane>
